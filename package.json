{
  "name": "hammidu-resume",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --cwd packages/xebec build",
    "test": "bun test",
    
    "xebec:example": "bun run --cwd packages/xebec example.ts",
    "xebec:test": "bun run --cwd packages/xebec test-validator.ts",
    
    "flouka:web": "bun run --cwd packages/flouka --watch web-server.ts",
    "flouka:example": "bun run --cwd packages/flouka example.ts",
    
    "validator:example": "bun run --cwd packages/validator example.ts",
    "validator:validate": "bun run --cwd packages/validator cli.ts",
    
    "web": "bun run flouka:web",
    "example": "bun run xebec:example",
    "validate": "bun run validator:example"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
